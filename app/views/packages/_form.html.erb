<%= form_with(model: package) do |form| %>
  <% if package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
        <% package.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :tracking_number, class:"form-control", placeholder:"Tracking number" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :delivery_status, class:"form-check-input" %>
    <%= form.label :delivery_status, class:"form-check-label"%>
  </div>


  <div class="form-group">
    <%= form.number_field :courier_id, class:"form-control", value: @courier.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary mb-3" %>
  </div>
<% end %>
